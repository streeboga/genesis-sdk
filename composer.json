{
    "name": "streeboga/genesis",
    "description": "PHP SDK for Genesis Platform",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Streeboga",
            "email": "admin@streeboga.ru"
        }
    ],
    "autoload": {
        "psr-4": {
            "Streeboga\\Genesis\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Streeboga\\Genesis\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.0",
        "phpdocumentor/phpdocumentor": "^3.4",
        "laravel/pint": "^1.15",
        "phpstan/phpstan": "^1.11"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest --colors=always",
        "test:coverage": "./vendor/bin/pest --coverage --colors=always",
        "docs": "./vendor/bin/phpdoc -d src -t docs/api",
        "lint": "./vendor/bin/pint --dirty",
        "stan": "./vendor/bin/phpstan analyse -c phpstan.neon"
    }
}
